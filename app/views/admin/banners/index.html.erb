<div class="col-sm-10 mt-5">
  <div class="white-box mt-5 bg-white pl-5 ps-5 pt-2">
    <h3 class="box-title mb-2 mt-4 font-weight-bold"><%= t("pages.admin.banner_management.title") %></h3>
    <%= render partial: "admin/banners/new" %>
    <div class="d-flex mt-2">
      <h6 class="ml-3 mt-2 font-weight-bold ml-1"><%= (t("pages.admin.banner_management.state.title")).upcase %>
        : &ensp;</h6>
      <div class="mb-3">
        <%= form_with url: admin_banners_path, method: :get, remote: true do |f| %>
          <%= f.select :state, options_for_select(banner_state_options, @state), {}, { class: "p-1", onchange: "this.form.submit();" } %>
        <% end %>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-lg-6 col-md-6">
        <%= render "shared/alert_message" %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table text-nowrap mt-2">
        <thead>
        <tr>
          <th class="border-top-0"><%= t("pages.admin.banner_management.description") %></th>
          <th class="border-top-0"><%= t("pages.admin.banner_management.start_date") %></th>
          <th class="border-top-0"><%= t("pages.admin.banner_management.finish_date") %></th>
          <th class="border-top-0 text-center"><%= t("pages.admin.banner_management.banner") %></th>
          <th class="border-top-0 text-center"></th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: "admin/banners/banner", collection: @banners %>
        </tbody>
      </table>
    </div>
  </div>
  <%= render "shared/paging" %>
</div>
