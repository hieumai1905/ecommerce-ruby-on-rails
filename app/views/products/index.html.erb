<!-- Shop Section Begin -->
<%= render partial: "shared/breadcrumb", locals: { breadcrumb_title: t("pages.shop.title"),
                                                   breadcrumb_links: "#{link_to(t("pages.home.title"), root_path)}
  <span>#{t("pages.shop.title")}</span>".html_safe }
%>
<!-- Shop Section Begin -->
<section class="shop spad">
  <div class="container">
    <div class="row">
      <%= render "sidebar_shop" %>
      <div class="col-lg-9">
        <div class="shop__product__option">
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <div class="shop__product__option__left">
                <p><%= t("pages.product.show_title") %> 1â€“ <%= @products.count %> <%= t("pages.product.result") %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <%= render @products || t("pages.product.empty") %>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%== pagy_bootstrap_nav @pagy %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Shop Section End -->
